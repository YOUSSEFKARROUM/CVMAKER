# ===========================================
# Template des variables d'environnement
# Copier vers .env et remplir les valeurs
# NE JAMAIS committer .env (déjà dans .gitignore)
# ===========================================

# Firestore (local storage)
VITE_DISABLE_FIRESTORE=true

# ========== Keycloak ==========
# IMPORTANT: VITE_KEYCLOAK_URL = URL du SERVEUR Keycloak (auth)
# Ex: https://auth.tondomaine.com ou https://keycloak.example.com/auth
# PAS l'URL de l'app Vercel/Railway !
VITE_KEYCLOAK_URL=https://votre-serveur-keycloak.com/auth
VITE_KEYCLOAK_REALM=cv-maker
VITE_KEYCLOAK_CLIENT_ID=cv-maker-client

# Client Secret (Keycloak Admin → Clients → cv-maker-client → Credentials)
VITE_KEYCLOAK_CLIENT_SECRET=your-client-secret

# Admin Client (pour inscription directe)
VITE_KEYCLOAK_ADMIN_CLIENT_ID=cv-maker-admin
VITE_KEYCLOAK_ADMIN_CLIENT_SECRET=your-admin-secret

# Mode local (sans Keycloak)
VITE_LOCAL_MODE=false
